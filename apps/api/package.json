{
  "name": "@cdlab996/dropply-api",
  "type": "module",
  "version": "1.0.0",
  "author": "wudi <wuchendi96@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/WuChenDi/dropply.git",
    "directory": "apps/api"
  },
  "scripts": {
    "dev": "wrangler dev --ip 0.0.0.0 --port 3000 src/index.ts",
    "deploy": "wrangler deploy --minify",
    "build": "bun build src/index.ts --outdir dist --target browser",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "cf:localdb": "wrangler d1 migrations apply dropply",
    "cf:remotedb": "wrangler d1 migrations apply dropply --remote",
    "db:studio": "drizzle-kit studio --port 3001 --host 0.0.0.0",
    "db:pull": "drizzle-kit pull",
    "db:push": "drizzle-kit push",
    "db:gen": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:up": "drizzle-kit up"
  },
  "dependencies": {
    "@cdlab996/dropply-uncrypto": "workspace:*",
    "@cdlab996/dropply-utils": "workspace:*",
    "@hono/zod-validator": "catalog:backend",
    "@libsql/client": "catalog:backend",
    "@react-email/components": "catalog:backend",
    "drizzle-orm": "catalog:backend",
    "hono": "catalog:backend",
    "resend": "catalog:backend",
    "winston": "catalog:backend",
    "winston-daily-rotate-file": "catalog:backend",
    "zod": "catalog:backend"
  },
  "devDependencies": {
    "@cdlab996/dropply-tsconfig": "workspace:*",
    "@cloudflare/workers-types": "catalog:dev",
    "@types/node": "catalog:dev",
    "drizzle-kit": "catalog:dev",
    "wrangler": "catalog:dev"
  }
}
