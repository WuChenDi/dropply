{
  "name": "@cdlab996/dropply-uncrypto",
  "type": "module",
  "version": "1.0.0",
  "description": "Single API for Web Crypto API and Crypto Subtle working in Node.js, Browsers and other runtimes",
  "homepage": "https://github.com/WuChenDi",
  "author": "wudi <wuchendi96@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/WuChenDi/dropply.git",
    "directory": "packages/uncrypto"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "browser": {
        "types": "./dist/crypto.web.d.mts",
        "import": "./dist/crypto.web.mjs",
        "require": "./dist/crypto.web.cjs"
      },
      "node": {
        "types": "./dist/crypto.node.d.mts",
        "import": "./dist/crypto.node.mjs",
        "require": "./dist/crypto.node.cjs"
      },
      "default": {
        "types": "./dist/crypto.web.d.mts",
        "import": "./dist/crypto.web.mjs"
      }
    }
  },
  "main": "./dist/crypto.node.cjs",
  "module": "./dist/crypto.web.mjs",
  "browser": "./dist/crypto.web.mjs",
  "types": "./dist/crypto.web.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@cdlab996/dropply-tsconfig": "workspace:*",
    "@types/node": "catalog:dev",
    "tsdown": "catalog:dev",
    "typescript": "catalog:dev",
    "vitest": "catalog:dev"
  }
}
