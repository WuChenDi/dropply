{
  "name": "@cdlab996/dropply-ui",
  "type": "module",
  "version": "1.0.0",
  "description": "dropply ui",
  "homepage": "https://github.com/WuChenDi",
  "author": "wudi <wuchendi96@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/WuChenDi/dropply.git",
    "directory": "packages/ui"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./css": "./src/globals.css",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "dist/**/*.css"
  ],
  "scripts": {
    "build:tsdown": "tsdown",
    "dev:tsdown": "tsdown --watch",
    "dev": "tsc -w",
    "build": "tsc",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "catalog:frontend",
    "@radix-ui/react-dialog": "catalog:frontend",
    "@radix-ui/react-hover-card": "catalog:frontend",
    "@radix-ui/react-label": "catalog:frontend",
    "@radix-ui/react-popover": "catalog:frontend",
    "@radix-ui/react-progress": "catalog:frontend",
    "@radix-ui/react-scroll-area": "catalog:frontend",
    "@radix-ui/react-select": "catalog:frontend",
    "@radix-ui/react-separator": "catalog:frontend",
    "@radix-ui/react-slider": "catalog:frontend",
    "@radix-ui/react-slot": "catalog:frontend",
    "@radix-ui/react-tabs": "catalog:frontend",
    "class-variance-authority": "catalog:frontend",
    "clsx": "catalog:frontend",
    "cmdk": "catalog:frontend",
    "lucide-react": "catalog:frontend",
    "ogl": "catalog:frontend",
    "react": "catalog:frontend",
    "react-dom": "catalog:frontend",
    "tailwind-merge": "catalog:frontend"
  },
  "devDependencies": {
    "@cdlab996/dropply-tsconfig": "workspace:*",
    "@types/node": "catalog:dev",
    "@types/react": "catalog:dev",
    "@types/react-dom": "catalog:dev",
    "@tailwindcss/postcss": "catalog:dev",
    "tailwindcss": "catalog:dev",
    "tsdown": "catalog:dev",
    "tw-animate-css": "catalog:frontend"
  }
}
