{
  "name": "@cdlab996/dropply-ui",
  "type": "module",
  "version": "1.0.0",
  "description": "dropply ui",
  "homepage": "https://github.com/WuChenDi",
  "author": "wudi <wuchendi96@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/WuChenDi/dropply.git",
    "directory": "packages/ui"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./css": "./src/globals.css",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "dist/**/*.css"
  ],
  "scripts": {
    "dev:tsup": "tsup src/index.ts --format esm,cjs --dts --external react,chrome --watch",
    "build:tsup": "tsup src/index.ts --format esm,cjs --dts --external react,chrome --watch",
    "dev": "tsc -w",
    "build": "tsc",
    "typecheck": "tsc --project ./tsconfig.json --noEmit",
    "prepack": "pnpm build"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "lucide-react": "catalog:prod",
    "ogl": "^1.0.11",
    "react": "catalog:prod",
    "react-dom": "catalog:prod",
    "tailwind-merge": "catalog:prod"
  },
  "devDependencies": {
    "@cdlab996/dropply-tsconfig": "workspace:*",
    "@types/node": "catalog:dev",
    "@types/react": "catalog:dev",
    "@types/react-dom": "catalog:dev",
    "@tailwindcss/postcss": "catalog:dev",
    "tailwindcss": "catalog:dev",
    "tsup": "catalog:dev",
    "tw-animate-css": "catalog:dev"
  }
}
