{
  "name": "@cdlab996/dropply-turbopack",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "author": "wudi <wuchendi96@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/WuChenDi",
  "repository": {
    "type": "git",
    "url": "https://github.com/WuChenDi/dropply.git"
  },
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:api": "pnpm -C apps/api run deploy",
    "build:web": "turbo run build --filter=./apps/web",
    "dev": "turbo run dev",
    "check-types": "turbo run check-types",
    "clean": "bash ./scripts/clean.sh",
    "format": "biome format . --write",
    "lint": "biome check .",
    "lint:fix": "biome check . --fix",
    "prepare": "turbo run build --filter=./packages/*"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:dev",
    "turbo": "catalog:dev",
    "typescript": "catalog:dev"
  }
}
